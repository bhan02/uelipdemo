<div class="jumbotron">
  <div class="container-fluid">
    <div class="over container body-content">
      <br>
      <br>
      <h2>Welcome to the UELIP Alumni Network Database</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="main-container">
    <h1>UELIP Alumni</h1>

    <table class="table table-hover table-condensed table-striped">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Term</th>
          <th>School</th>
          <th>Current city</th>
          <th>State</th>
          <th>Current role</th>
          <th>Current organization</th>
          <th>Permission to share contactinfo</th>
          <th>Do not contact</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @alumnus.each do |alumnu| %>
          <tr>
            <td><%= alumnu.first_name %></td>
            <td><%= alumnu.last_name %></td>
            <td><%= alumnu.email %></td>
            <td><%= alumnu.phone %></td>
            <td><%= alumnu.term %></td>
            <td><%= alumnu.school %></td>
            <td><%= alumnu.current_city %></td>
            <td><%= alumnu.state %></td>
            <td><%= alumnu.current_role %></td>
            <td><%= alumnu.current_organization %></td>
            <td><%= alumnu.permission_to_share_contactinfo %></td>
            <td><%= alumnu.do_not_contact %></td>
            <td><%= link_to 'Show', alumnu, class: "btn btn-link" %></td>
            <td><%= link_to 'Edit', edit_alumnu_path(alumnu), class: "btn btn-link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Alumnus', new_alumnu_path %><br>
    <br>
  </div>
</div>

